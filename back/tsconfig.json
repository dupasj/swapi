{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "esnext",
    "outDir": "dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": ["es2019"],
    "baseUrl": "./"
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*.ts"
  ]
}